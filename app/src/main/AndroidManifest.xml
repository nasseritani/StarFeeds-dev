<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nader.starfeeds">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".StarFeeds"
        android:allowBackup="true"
        android:icon="@drawable/drawable_logo_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".authentication.AuthenticationActivity" />
        <activity android:name=".LogOutActivity" />
        <activity android:name=".ui.sections.home.MainViewActivity" />
        <activity android:name=".ui.sections.VideoPlayerActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.sections.home.MainViewActivity" />

        <activity android:name=".settings.SettingsActivity" />
        <activity android:name=".ui.sections.search.SearchCelebritiesActivity" />
        <activity android:name=".ui.sections.celebrity.CelebrityActivity" />
        <activity android:name=".ui.sections.explore.ExploreDetailActivity" />
        <activity android:name=".ui.sections.VideoPlayerWebView"></activity>
    </application>

</manifest>