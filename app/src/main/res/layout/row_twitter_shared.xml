<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/ivProfileImage"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_fb_blue"
            android:paddingTop="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp">
        <TextView
            android:id="@+id/tvProfileName"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nancy Ajram"/>
        <TextView
            android:id="@+id/tvDate"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10hrs"/>

    </LinearLayout>

        <LinearLayout
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">
            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:autoLink="all"
                android:text="This week offered more concerning reminders of the internet deep secuirty flows"
                android:textColor="#14171A"
                />

            <android.support.v7.widget.CardView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                    android:src="@drawable/nancyajramprofile"
                    android:id="@+id/ivImageLink"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />


                <TextView
                    android:id="@+id/tvImageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="Description"/>
                <TextView
                    android:id="@+id/tvLink"
                    android:autoLink="all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="link"

                    android:textColorLink="#dfe3ee"/>

</LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
 </android.support.v7.widget.CardView>
            </LinearLayout>


