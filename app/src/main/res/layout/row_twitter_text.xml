<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="#3b5998"

    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    >

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_fb_blue"
        android:paddingTop="1dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/tvProfileName"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15m"
        android:id="@+id/tvDate"
        android:layout_above="@+id/tvFeed"
        android:layout_alignParentEnd="true"
        android:textColor="#657786"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Textt"
        android:id="@+id/tvFeed"
        android:layout_below="@+id/tvProfileName"
        android:layout_alignStart="@+id/tvProfileName"
        android:textSize="14sp"
        android:textColor="#14171A"
        android:layout_marginBottom="5dp"
        android:autoLink="all"
        android:layout_alignLeft="@+id/tvProfileName" />


</RelativeLayout>
    </android.support.v7.widget.CardView>